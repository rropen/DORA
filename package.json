{
  "name": "dora",
  "version": "0.1.0",
  "description": "Base template for future app templates in the Software Factory",
  "main": "index.js",
  "repository": "https://github.com/rrglobal/DORA",
  "author": "Josh Haines",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/node": "16.11.26",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "ts-node src/index.ts",
    "build": "yarn tsc",
    "prod": "node ./dist/index.js",
    "commit": "cz",
    "test": ""
  },
  "dependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/express": "^4.17.13",
    "dotenv": "^16.0.0",
    "express": "4.17.3",
    "graphql": "^16.3.0",
    "graphql-request": "^4.2.0",
    "package.json": "^2.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
